<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Organic Grocery</title>

    <!-- Link CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="../css/site.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <header>
        <div class="row">
            <!--Logo-->
            <div class="col-1">
                <img src="~/img/Organic Grocery.png" class="img-fluid" />
            </div>

            <!--Empty-->
            <div class="col-1">
            </div>

            <!--Navigation and Search-->
            <div class="col-8 d-flex flex-column justify-content-evenly">
                <!--Navigation-->
                <div class="d-flex justify-content-evenly align-items-center nav-main" style="flex: 1; font-weight: bold; color: white;">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i> Home
                    </a>
                    <a href="#"><i class="bi bi-info-circle"></i>About Us</a>
                    <div class="dropdown">
                        <button class="dropdown-btn">
                            <i class="bi bi-gear"></i> Manage
                            <span class="dropdown-arrow">▲</span>
                        </button>
                        <div class="dropdown-content">
                            <a asp-controller="Order" asp-action="Index" style="--i: 1">Order</a>
                            <a asp-controller="Product" asp-action="Index" style="--i: 2">Product</a>
                            <a asp-controller="Category" asp-action="Index" style="--i: 3">Category</a>
                            <a asp-controller="Discount" asp-action="Index" style="--i: 4">Discount</a>
                            <a asp-controller="Customer" asp-action="Index" style="--i: 5">Customer</a>
                            <a href="#" style="--i: 6">Revenue</a>
                        </div>
                    </div>
                    <a asp-controller="Home" asp-action="ShoppingCart" id="cart-icon" style="position: relative;">
                        <i class="bi bi-cart"></i> Cart
                        <span id="cart-count" class="badge rounded-pill bg-danger" style="position: absolute; top: -5px; right: -5px; font-size: 10px;">0</span>
                    </a>
                    <a href="#"> <i class="bi bi-headset"></i>Support</a>
                </div>

                <!--Search-->
                <div class="input-group d-flex justify-content-evenly align-items-center" style="flex: 1; ">
                    <input type="text" class="form-control custom-search-input" placeholder="Search..."
                           style="background-color: white; border: 1px solid #6D7B30; color: #333;">
                    <button class="btn custom-search-btn" type="button"
                            style="background-color: white; border: 1px solid #6D7B30; color: #333;">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>

            <!--Translate,Account and Notification-->
            <div class="col-2 d-flex flex-column justify-content-evenly">
                <!--Translate-->
                <div class="dropdown d-flex justify-content-evenly align-items-center custom-dropdown" style="flex: 1;">
                    <button class="btn dropdown-toggle custom-dropdown-toggle border-0 w-100" type="button" data-bs-toggle="dropdown">
                        Choose Language
                    </button>
                    <ul class="dropdown-menu custom-dropdown-menu w-100">
                        <li><a class="dropdown-item custom-dropdown-item" href="#" onclick="changeLanguage('vi')">Tiếng Việt</a></li>
                        <li><a class="dropdown-item custom-dropdown-item" href="#" onclick="changeLanguage('en')">English</a></li>
                        <li><a class="dropdown-item custom-dropdown-item" href="#" onclick="changeLanguage('fr')">Français</a></li>
                        <li><a class="dropdown-item custom-dropdown-item" href="#" onclick="changeLanguage('de')">Deutsch</a></li>
                    </ul>
                </div>

                <!--Account and Notification-->
                <div class="d-flex justify-content-evenly align-items-center" style="flex: 1;">
                    <a asp-controller="Profile" asp-action="Index" style="height: 100%; display: flex; align-items: center;">
                        <i class="bi bi-person-circle nav-icon" style="font-size: 1.5rem;"></i>
                    </a>
                    <a href="#" style="height: 100%; display: flex; align-items: center;">
                        <i class="bi bi-bell-fill nav-icon" style="font-size: 1.5rem;"></i>
                    </a>
                </div>
            </div>
        </div>
    </header>


    <div class="mb-lg-5 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!--Footer-->
    <footer class="footer row" style="background-color: #D9C2A8; padding: 20px;">
        <div class="col-3 d-flex justify-content-center">
            <div>
                <p style="color: #314401; font-weight: bold; font-size: 18px; ">Organic Grocery</p>
                <p style="font-weight:bold; font-size:10px;">Bringing Nature to Your Table</p>
                <p style="font-weight:bold; font-size:10px;"><i class="bi bi-geo-alt-fill"></i>54 Nguyễn Lương Bằng</p>
            </div>
        </div>
        <div class="col-3 d-flex justify-content-center">
            <div>
                <p style="color: #314401; font-weight: bold; font-size: 18px; ">Quick Links</p>
                <p style="font-weight: bold; font-size: 10px; text-decoration: underline;">Home</p>
                <p style="font-weight: bold; font-size: 10px; text-decoration: underline;">Shopping Cart</p>
                <p style="font-weight: bold; font-size: 10px; text-decoration: underline;">Manage Order</p>
            </div>
        </div>
        <div class="col-3 d-flex justify-content-center">
            <div>
                <p style="color: #314401; font-weight: bold; font-size: 18px; ">Customer Support</p>
                <p style="font-weight:bold; font-size:10px;"><i class="bi bi-telephone-fill"></i> +84 123 456 789</p>
                <p style="font-weight:bold; font-size:10px;"><i class="bi bi-envelope-fill"></i> organicgrocery@gmail.com</p>
                <p style="font-weight:bold; font-size:10px;"><i class="bi bi-clock-fill"></i> 6:00 AM - 12:00 PM</p>
            </div>
        </div>
        <div class="col-3 d-flex justify-content-center">
            <div>
                <p style="color: #314401; font-weight: bold; font-size: 18px;">Follow Us</p>
                <a style="font-weight: bold; font-size: 10px; display: flex; align-items: center; margin-bottom: 10px;">
                    <img src="../img/facebook.png" style="width: 14px; height: 14px; margin-right: 5px;" /> organicgrocery
                </a>
                <a style="font-weight: bold; font-size: 10px; display: flex; align-items: center; margin-bottom: 10px;">
                    <img src="../img/youtube.png" style="width: 14px; height: 14px; margin-right: 5px;" /> organicgrocery
                </a>
                <a style="font-weight: bold; font-size: 10px; display: flex; align-items: center; margin-bottom: 10px;">
                    <img src="../img/twitter.png" style="width: 14px; height: 14px; margin-right: 5px;" /> organicgrocery
                </a>
                <a style="font-weight: bold; font-size: 10px; display: flex; align-items: center; margin-bottom: 10px;">
                    <img src="../img/instagram.png" style="width: 14px; height: 14px; margin-right: 5px;" /> organicgrocery
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Link JS Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/fnqjnwdxvb57lyzscn93eqgyze1znicr3jsf44c5p9p7y86w/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
