    </div>

    @* Phân trang *@
    <div class="d-flex justify-content-center mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination" style="gap: 5px;">
                @* Nút Previous *@
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous"
                       style="border-radius: 10px; background-color: #F5F0EA; border: 1px solid #D7C7B5; color: #6D4C41;">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @* Các số trang *@
                @for (int i = 1; i <= 3; i++)
                {
                    <li class="page-item @(i == 1 ? "active" : "")">
                        <a class="page-link" href="#"
                           style="border-radius: 10px; @(i == 1 ? "background-color: #B08968; border: 1px solid #B08968; color: #F8E1C4;" : "background-color: #F5F0EA; border: 1px solid #D7C7B5; color: #6D4C41;")">@i</a>
                    </li>
                }

                @* Nút Next *@
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next"
                       style="border-radius: 10px; background-color: #F5F0EA; border: 1px solid #D7C7B5; color: #6D4C41;">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
